<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.ausu.erpapp.view.CloudImageView
            android:id="@+id/avatar_coach"
            android:layout_width="@dimen/head_width"
            android:layout_height="@dimen/head_width"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="@dimen/margin_standard"
            fresco:roundAsCircle="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/avatar_coach"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="张教练"
                android:textColor="@color/theme_black"
                android:textSize="@dimen/text_standard" />

            <TextView
                android:id="@+id/coachYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/avatar_coach"
                android:includeFontPadding="false"
                android:text="年龄：40    教龄：5"
                android:textColor="@color/theme_light_black"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_standard"
            android:drawableTop="@mipmap/ic_words"
            android:text="给他留言"
            android:textColor="@color/theme_light_black"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/theme_bgc_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coachTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="aaa"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="aaa"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="aaa"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>