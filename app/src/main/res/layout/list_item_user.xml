<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    android:minHeight="94dp"
    android:orientation="vertical">

    <com.example.ausu.erpapp.view.CloudImageView
        android:id="@+id/headIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_standard"
        android:background="@mipmap/ic_launcher"
        fresco:actualImageScaleType="centerInside"
        fresco:failureImage="@mipmap/ic_launcher"
        fresco:failureImageScaleType="centerInside"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="#ffae5e"
        fresco:roundingBorderWidth="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_toRightOf="@+id/headIcon"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:includeFontPadding="false"
            android:text="张三"
            android:textColor="@color/md_white_1000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableLeft="@mipmap/ic_phone"
            android:includeFontPadding="false"
            android:text="137******34"
            android:textColor="@color/md_white_1000"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_standard"
        android:drawableRight="@mipmap/ic_user_btn_right_white"
        android:includeFontPadding="false"
        android:text="账户管理"
        android:textColor="@color/md_white_1000"
        android:textSize="12sp" />

</RelativeLayout>