<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/md_white_1000">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="top"
                android:background="#cccccc" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/margin_standard"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_activity" />

            <TextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_standard"
                android:gravity="center"
                android:text="距离结束："
                android:includeFontPadding="false"
                android:textColor="@color/theme_light_black"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="#cccccc" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/schoolItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.ausu.erpapp.view.CloudImageView
                android:id="@+id/carIcons"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="left"
                android:layout_margin="@dimen/margin_standard" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="96dp"
                android:layout_marginRight="96dp">

                <TextView
                    android:id="@+id/driverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="海淀驾校"
                    android:includeFontPadding="false"
                    android:textColor="@color/theme_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/driverName"
                    android:layout_marginTop="6dp"
                    android:text="暑假特惠"
                    android:includeFontPadding="false"
                    android:textColor="@color/theme_light_black"
                    android:textSize="@dimen/text_standard" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/discount"
                    android:layout_marginTop="6dp"
                    android:text="市场价"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_standard">

                <TextView
                    android:id="@+id/enroll"
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_sure"
                    android:gravity="center"
                    android:padding="4dp"
                    android:includeFontPadding="false"
                    android:text="立即报名"
                    android:textColor="#00aaff"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/enroll_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/enroll"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="已报名人数"
                    android:includeFontPadding="false"
                    android:textColor="@color/light_black"
                    android:textSize="12sp" />
            </RelativeLayout>


        </FrameLayout>

    </LinearLayout>
</LinearLayout>