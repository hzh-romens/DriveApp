<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_large" />

    <RadioGroup
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_large"
        android:layout_gravity="bottom"
        android:background="#ebebeb"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_drawable_select"
            android:gravity="center"
            android:text="报名"
            android:textColor="@drawable/textcolor_select"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/news_drawable_select"
            android:gravity="center"
            android:text="学车"
            android:textColor="@drawable/textcolor_select"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/disatnce_drawable_select"
            android:gravity="center"
            android:text="论坛"
            android:textColor="@drawable/textcolor_select"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/user_drawable_select"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/textcolor_select"
            android:textSize="10sp" />
    </RadioGroup>

</FrameLayout>