<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/adress"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#fff2d2"
        android:drawableRight="@mipmap/ic_appointment_address"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="驾校地址：北京市海淀区海淀驾校"
        android:textColor="#444444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:text="您已累计18学时"
        android:textColor="@color/theme_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:text="预约10次"
        android:textColor="@color/theme_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:text="历史0个月28天"
        android:textColor="@color/theme_black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/shape_appointment"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/appointmentTime"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/margin_small"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="预约时间"
                android:textColor="@color/theme_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_small"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/btn_right"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="明日9：00-12:00"
                android:textColor="@color/theme_black"
                android:textSize="15sp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd" />

        <FrameLayout
            android:id="@+id/appointmentItem"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/margin_small"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="练习项目"
                android:textColor="@color/theme_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_small"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/btn_right"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="无"
                android:textColor="@color/theme_black"
                android:textSize="15sp" />
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/appointmentBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_large"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_sure_btn"
        android:focusable="false"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="预约"
        android:textColor="@color/md_white_1000"
        android:textSize="16sp" />

</LinearLayout>