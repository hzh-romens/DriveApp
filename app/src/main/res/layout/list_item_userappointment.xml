<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/appointStatus"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_standard"
        android:text="正在进行"
        android:includeFontPadding="false"
        android:textColor="#fa7b00"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/margin_standard"
            android:gravity="center_vertical"
            android:text="预约时间"
            android:includeFontPadding="false"
            android:textColor="@color/theme_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/appointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_standard"
            android:gravity="center_vertical"
            android:text="2016-09-16 9:00~12:00"
            android:includeFontPadding="false"
            android:textColor="@color/theme_black"
            android:textSize="15sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/margin_standard"
            android:gravity="center_vertical"
            android:text="练习项目"
            android:includeFontPadding="false"
            android:textColor="@color/theme_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/appointmentItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_standard"
            android:gravity="center_vertical"
            android:text="直角拐弯"
            android:includeFontPadding="false"
            android:textColor="@color/theme_black"
            android:textSize="15sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_standard"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/sure"
            android:background="@drawable/shape_cancle"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:includeFontPadding="false"
            android:text="取消预约"
            android:textColor="@color/theme_light_black"
            android:textSize="@dimen/text_standard" />


        <TextView
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_sure"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="完成"
            android:includeFontPadding="false"
            android:textColor="#47b4ff"
            android:textSize="@dimen/text_standard" />
    </RelativeLayout>

</LinearLayout>