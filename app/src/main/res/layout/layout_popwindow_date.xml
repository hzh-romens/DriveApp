<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/md_white_1000"
        android:gravity="center"
        android:orientation="horizontal">

        <com.example.ausu.erpapp.date.WheelYearPicker
            android:id="@+id/main_wheel_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="true"
            aigestudio:wheel_item_align="right"
            aigestudio:wheel_item_text_color="@color/light_black"
            aigestudio:wheel_item_text_size="24sp"
            aigestudio:wheel_selected_item_text_color="@color/md_black_1000" />

        <com.example.ausu.erpapp.date.WheelMonthPicker
            android:id="@+id/main_wheel_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="true"
            aigestudio:wheel_item_text_color="@color/light_black"
            aigestudio:wheel_item_text_size="24sp"
            aigestudio:wheel_selected_item_text_color="@color/md_black_1000" />

        <com.example.ausu.erpapp.date.WheelDayPicker
            android:id="@+id/main_wheel_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/md_white_1000"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="true"
            aigestudio:wheel_item_align="left"
            aigestudio:wheel_item_text_color="@color/light_black"
            aigestudio:wheel_item_text_size="24sp"
            aigestudio:wheel_selected_item_text_color="@color/md_black_1000" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="#eeeeee">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="48dp"
            android:background="@drawable/shape_cancle"
            android:gravity="center"
            android:text="取消"
            android:includeFontPadding="false"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="48dp"
            android:background="@drawable/shape_cancle"
            android:gravity="center"
            android:text="确定"
            android:includeFontPadding="false"
            android:textColor="#000000"
            android:textSize="14sp" />
    </FrameLayout>
</LinearLayout>