<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_large"
        android:background="@color/themeColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/singup_success"
            android:includeFontPadding="false"
            android:textSize="@dimen/text_title" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/margin_large"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/margin_standard"
            android:scaleType="center"
            android:src="@mipmap/icon_back" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp">

        <TextView
            android:id="@+id/success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_singup_success"
            android:gravity="center_horizontal"
            android:text="@string/singup_success"
            android:includeFontPadding="false"
            android:textColor="@color/theme_black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/success"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="@dimen/margin_standard"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@string/singup_info"
            android:textColor="@color/theme_light_black"
            android:textSize="@dimen/margin_standard" />
    </RelativeLayout>
</FrameLayout>