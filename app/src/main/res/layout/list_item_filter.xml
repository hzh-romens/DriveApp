<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/flag_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="综合"
            android:textColor="@drawable/text_filter_selector"
            android:textSize="@dimen/text_standard" />

        <RadioButton
            android:id="@+id/flag_distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="距离近"
            android:textColor="@drawable/text_filter_selector"
            android:textSize="@dimen/text_standard" />

        <RadioButton
            android:id="@+id/flag_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="评价高"
            android:includeFontPadding="false"
            android:textColor="@drawable/text_filter_selector"
            android:textSize="@dimen/text_standard" />

        <RadioButton
            android:id="@+id/flag_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="学费低"
            android:includeFontPadding="false"
            android:textColor="@drawable/text_filter_selector"
            android:textSize="@dimen/text_standard" />

        <com.example.ausu.erpapp.view.ReviseRadioButton
            android:id="@+id/flag_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="@mipmap/arrow_down"
            android:gravity="center_vertical|right"
            android:text="筛选"
            android:includeFontPadding="false"
            android:textColor="@drawable/text_filter_selector"
            android:textSize="@dimen/text_standard" />
    </RadioGroup>

    <com.example.ausu.erpapp.view.MyListView
        android:id="@+id/myListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp" />
</FrameLayout>