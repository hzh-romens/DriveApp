<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard">x


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/className"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:includeFontPadding="false"
                android:text="海淀驾校"
                android:textColor="@color/theme_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:includeFontPadding="false"
                android:text="专车接送"
                android:textColor="@color/theme_light_black"
                android:textSize="@dimen/text_standard" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:includeFontPadding="false"
                android:text="累计市场价"
                android:textColor="@color/light_black"
                android:textSize="@dimen/text_small" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/enroll"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_sure"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="4dp"
                android:text="立即报名"
                android:textColor="#00aaff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/enroll_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/enroll"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="已报名人数"
                android:textColor="@color/light_black"
                android:textSize="12sp" />
        </RelativeLayout>


    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

    <TextView
        android:id="@+id/getMore"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@mipmap/btn_right"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="查看更多班型"
        android:textColor="@color/theme_light_black"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

</LinearLayout>